<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:m="urn:import:gwt.material.design.client.ui"
             xmlns:ma="urn:import:gwt.material.design.addins.client">

    <m:MaterialPanel>
        <m:MaterialLabel text="File Uploader" fontSize="2.4em"/>
        <m:MaterialLabel text="Custom file uploader with Dnd support with the help of dropzone.js. It has multiple feature just like the GWT File Uploader core widget."/>
        <m:MaterialChip marginTop="20" letter="D" letterBackgroundColor="PURPLE" backgroundColor="PURPLE_LIGHTEN_5" letterColor="WHITE" text="Dropzone 5.5.0" />
        <ma:fileuploader.MaterialFileUploader ui:field="uploader" url="fileupload" maxFileSize="20" shadow="1">
            <ma:fileuploader.MaterialUploadLabel title="Drag Files to Upload" description="Some description here" />
        </ma:fileuploader.MaterialFileUploader>
    </m:MaterialPanel>
</ui:UiBinder>
