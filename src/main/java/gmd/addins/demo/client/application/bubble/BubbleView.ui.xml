<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:m="urn:import:gwt.material.design.client.ui"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:ma="urn:import:gwt.material.design.addins.client">

    <m:MaterialPanel>
        <g:HTMLPanel>
            <pre class="xml" style="height: 40px;overflow: hidden">
&lt;ma:bubble.MaterialBubble />
            </pre>
        </g:HTMLPanel>
        <m:MaterialRow>
            <ma:bubble.MaterialBubble ui:field="bubble" position="LEFT" float="LEFT" marginLeft="12" marginTop="32" maxWidth="300px">
                <m:MaterialLabel ui:field="bubbleLabel" text="Hello there, How are you doing?"/>
                <m:MaterialLabel text="1/2/2016" fontSize="0.6em" float="RIGHT"/>
            </ma:bubble.MaterialBubble>
        </m:MaterialRow>
        <m:MaterialRow>
            <m:MaterialColumn grid="s12 m4">
                <m:MaterialTextArea ui:field="content" label="Text Label"/>
                <m:MaterialListValueBox ui:field="arrowPosition" label="Arrow Position"/>
            </m:MaterialColumn>
        </m:MaterialRow>
    </m:MaterialPanel>
</ui:UiBinder>
