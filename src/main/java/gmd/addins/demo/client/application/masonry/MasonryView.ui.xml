<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:m="urn:import:gwt.material.design.client.ui"
             xmlns:widget="urn:import:gmd.addins.demo.client.widget"
             xmlns:ma="urn:import:gwt.material.design.addins.client">

    <m:MaterialPanel>
        <g:HTMLPanel>
            <pre class="xml" style="height: 40px;overflow: hidden">
    &lt;ma:masonry.MaterialMasonry />
            </pre>
        </g:HTMLPanel>
        <widget:CodeSection sectionTitle="Basic" description="You can use masonry by wrapping column components.">
            <ma:masonry.MaterialMasonry>
                <m:MaterialColumn grid="l4 s12 m6" backgroundColor="BLUE_LIGHTEN_1" height="400px" waves="DEFAULT" padding="0" textAlign="CENTER">
                    <m:MaterialIcon iconType="WIFI_TETHERING" iconColor="WHITE" iconSize="LARGE" marginTop="125" />
                    <m:MaterialLabel text="4 columns" bottom="0" backgroundColor="BLUE_DARKEN_1" layoutPosition="ABSOLUTE" padding="12" fontSize="1.2em" textColor="WHITE" width="100%"/>
                </m:MaterialColumn>
                <m:MaterialColumn grid="l2 s12 m6" backgroundColor="RED_LIGHTEN_1" height="200px" waves="DEFAULT" padding="0" textAlign="CENTER">
                    <m:MaterialIcon iconType="ACCESSIBLE" iconColor="WHITE" iconSize="MEDIUM" marginTop="50" />
                    <m:MaterialLabel text="2 columns" bottom="0" backgroundColor="RED_DARKEN_1" layoutPosition="ABSOLUTE" padding="12" fontSize="1.2em" textColor="WHITE" width="100%"/>
                </m:MaterialColumn>
                <m:MaterialColumn grid="l2 s12 m6" backgroundColor="YELLOW_LIGHTEN_1" height="200px" waves="DEFAULT" padding="0" textAlign="CENTER">
                    <m:MaterialIcon iconType="ARROW_UPWARD" iconColor="WHITE" iconSize="MEDIUM" marginTop="50" />
                    <m:MaterialLabel text="2 columns" bottom="0" backgroundColor="YELLOW_DARKEN_1" layoutPosition="ABSOLUTE" padding="12" fontSize="1.2em" textColor="WHITE" width="100%"/>
                </m:MaterialColumn>
                <m:MaterialColumn grid="l4 s12 m6" backgroundColor="GREEN_LIGHTEN_1" height="200px" waves="DEFAULT" padding="0" textAlign="CENTER">
                    <m:MaterialIcon iconType="WRAP_TEXT" iconColor="WHITE" iconSize="MEDIUM" marginTop="50"/>
                    <m:MaterialLabel text="4 columns" bottom="0" backgroundColor="GREEN_DARKEN_1" layoutPosition="ABSOLUTE" padding="12" fontSize="1.2em" textColor="WHITE" width="100%"/>
                </m:MaterialColumn>
                <m:MaterialColumn grid="l2 s12 m6" backgroundColor="ORANGE_LIGHTEN_1" height="200px" waves="DEFAULT" padding="0" textAlign="CENTER">
                    <m:MaterialIcon iconType="TIME_TO_LEAVE" iconColor="WHITE" iconSize="MEDIUM" marginTop="50" />
                    <m:MaterialLabel text="2 columns" bottom="0" backgroundColor="ORANGE_LIGHTEN_1" layoutPosition="ABSOLUTE" padding="12" fontSize="1.2em" textColor="WHITE" width="100%"/>
                </m:MaterialColumn>
                <m:MaterialColumn grid="l2 s12 m6" backgroundColor="PURPLE_LIGHTEN_1" height="200px" waves="DEFAULT" padding="0" textAlign="CENTER">
                    <m:MaterialIcon iconType="ASSIGNMENT_RETURN" iconColor="WHITE" iconSize="MEDIUM" marginTop="50" />
                    <m:MaterialLabel text="2 columns" bottom="0" backgroundColor="PURPLE_DARKEN_1" layoutPosition="ABSOLUTE" padding="12" fontSize="1.2em" textColor="WHITE" width="100%"/>
                </m:MaterialColumn>
                <m:MaterialColumn grid="l4 s12 m6" backgroundColor="GREY_LIGHTEN_1" height="400px" waves="DEFAULT" padding="0" textAlign="CENTER">
                    <m:MaterialIcon iconType="VIDEOCAM" iconColor="WHITE" iconSize="LARGE" marginTop="125"/>
                    <m:MaterialLabel text="4 columns" bottom="0" backgroundColor="GREY_DARKEN_1" layoutPosition="ABSOLUTE" padding="12" fontSize="1.2em" textColor="WHITE" width="100%"/>
                </m:MaterialColumn>
                <m:MaterialColumn grid="l2 s12 m6" backgroundColor="AMBER_LIGHTEN_1" height="200px" waves="DEFAULT" padding="0" textAlign="CENTER">
                    <m:MaterialIcon iconType="POLYMER" iconColor="WHITE" iconSize="MEDIUM" marginTop="50" />
                    <m:MaterialLabel text="2 columns" bottom="0" backgroundColor="AMBER_DARKEN_1" layoutPosition="ABSOLUTE" padding="12" fontSize="1.2em" textColor="WHITE" width="100%"/>
                </m:MaterialColumn>
                <m:MaterialColumn grid="l2 s12 m6" backgroundColor="INDIGO_LIGHTEN_1" height="200px" waves="DEFAULT" padding="0" textAlign="CENTER">
                    <m:MaterialIcon iconType="WORK" iconColor="WHITE" iconSize="MEDIUM" marginTop="50" />
                    <m:MaterialLabel text="2 columns" bottom="0" backgroundColor="INDIGO_DARKEN_1" layoutPosition="ABSOLUTE" padding="12" fontSize="1.2em" textColor="WHITE" width="100%"/>
                </m:MaterialColumn>
                <m:MaterialColumn grid="l2 s12 m6" backgroundColor="BROWN_LIGHTEN_1" height="200px" waves="DEFAULT" padding="0" textAlign="CENTER">
                    <m:MaterialIcon iconType="QUESTION_ANSWER" iconColor="WHITE" iconSize="MEDIUM" marginTop="50" />
                    <m:MaterialLabel text="2 columns" bottom="0" backgroundColor="BROWN_DARKEN_1" layoutPosition="ABSOLUTE" padding="12" fontSize="1.2em" textColor="WHITE" width="100%"/>
                </m:MaterialColumn>
                <m:MaterialColumn grid="l2 s12 m6" backgroundColor="PINK_LIGHTEN_1" height="200px" waves="DEFAULT" padding="0" textAlign="CENTER">
                    <m:MaterialIcon iconType="AIRPLANEMODE_ACTIVE" iconColor="WHITE" iconSize="MEDIUM" marginTop="50" />
                    <m:MaterialLabel text="2 columns" bottom="0" backgroundColor="PINK_DARKEN_1" layoutPosition="ABSOLUTE" padding="12" fontSize="1.2em" textColor="WHITE" width="100%"/>
                </m:MaterialColumn>
            </ma:masonry.MaterialMasonry>
        </widget:CodeSection>

        <widget:CodeSection sectionTitle="Origin Left" description="By default originLeft is set to true, you can rearrange the blocks into right by setting it to false.">
            <ma:masonry.MaterialMasonry grid="l12 s12 m12" originLeft="false">
                <m:MaterialColumn grid="l2 s12 m6" backgroundColor="BLUE_LIGHTEN_1" height="200px" waves="DEFAULT" padding="0"/>
                <m:MaterialColumn grid="l3 s12 m6" backgroundColor="GREY_LIGHTEN_2" height="400px" waves="DEFAULT" padding="0"/>
                <m:MaterialColumn grid="l3 s12 m6" backgroundColor="YELLOW_LIGHTEN_3" height="200px" waves="DEFAULT" padding="0"/>
                <m:MaterialColumn grid="l2 s12 m6" backgroundColor="PURPLE_LIGHTEN_4" height="400px" waves="DEFAULT" padding="0"/>
                <m:MaterialColumn grid="l5 s12 m6" backgroundColor="RED_DARKEN_1" height="200px" waves="DEFAULT" padding="0"/>
                <m:MaterialColumn grid="l3 s12 m6" backgroundColor="PINK_DARKEN_2" height="200px" waves="DEFAULT" padding="0"/>
                <m:MaterialColumn grid="l2 s12 m6" backgroundColor="INDIGO_DARKEN_3" height="100px" waves="DEFAULT" padding="0"/>
                <m:MaterialColumn grid="l2 s12 m6" backgroundColor="YELLOW_DARKEN_4" height="200px" waves="DEFAULT" padding="0"/>
                <m:MaterialColumn grid="l2 s12 m6" backgroundColor="GREEN_ACCENT_1" height="200px" waves="DEFAULT" padding="0"/>
            </ma:masonry.MaterialMasonry>
        </widget:CodeSection>

        <widget:CodeSection sectionTitle="Origin Top" description="By default originLeft is set to false, you can rearrange the blocks into bottom by setting it to false.">
            <ma:masonry.MaterialMasonry grid="l12 s12 m12" originTop="false">
                <m:MaterialColumn grid="l2 s12 m6" backgroundColor="BLUE_LIGHTEN_1" height="200px" waves="DEFAULT" padding="0"/>
                <m:MaterialColumn grid="l3 s12 m6" backgroundColor="GREY_LIGHTEN_2" height="400px" waves="DEFAULT" padding="0"/>
                <m:MaterialColumn grid="l3 s12 m6" backgroundColor="YELLOW_LIGHTEN_3" height="200px" waves="DEFAULT" padding="0"/>
                <m:MaterialColumn grid="l2 s12 m6" backgroundColor="PURPLE_LIGHTEN_4" height="400px" waves="DEFAULT" padding="0"/>
                <m:MaterialColumn grid="l5 s12 m6" backgroundColor="RED_DARKEN_1" height="200px" waves="DEFAULT" padding="0"/>
                <m:MaterialColumn grid="l3 s12 m6" backgroundColor="PINK_DARKEN_2" height="200px" waves="DEFAULT" padding="0"/>
                <m:MaterialColumn grid="l2 s12 m6" backgroundColor="INDIGO_DARKEN_3" height="100px" waves="DEFAULT" padding="0"/>
                <m:MaterialColumn grid="l2 s12 m6" backgroundColor="YELLOW_DARKEN_4" height="200px" waves="DEFAULT" padding="0"/>
                <m:MaterialColumn grid="l1 s12 m6" backgroundColor="GREEN_ACCENT_1" height="200px" waves="DEFAULT" padding="0"/>
            </ma:masonry.MaterialMasonry>
        </widget:CodeSection>

        <widget:CodeSection sectionTitle="Transition Duration" description="You can set how fast the transition of masonry by settung it's duration, if set to 0 then no transition will be applied.">
            <ma:masonry.MaterialMasonry grid="l12 s12 m12" duration="0">
                <m:MaterialColumn grid="l2 s12 m6" backgroundColor="BLUE_LIGHTEN_1" height="200px" waves="DEFAULT" padding="0"/>
                <m:MaterialColumn grid="l3 s12 m6" backgroundColor="GREY_LIGHTEN_2" height="400px" waves="DEFAULT" padding="0"/>
                <m:MaterialColumn grid="l3 s12 m6" backgroundColor="YELLOW_LIGHTEN_3" height="200px" waves="DEFAULT" padding="0"/>
                <m:MaterialColumn grid="l2 s12 m6" backgroundColor="PURPLE_LIGHTEN_4" height="400px" waves="DEFAULT" padding="0"/>
                <m:MaterialColumn grid="l5 s12 m6" backgroundColor="RED_DARKEN_1" height="200px" waves="DEFAULT" padding="0"/>
                <m:MaterialColumn grid="l3 s12 m6" backgroundColor="PINK_DARKEN_2" height="200px" waves="DEFAULT" padding="0"/>
                <m:MaterialColumn grid="l2 s12 m6" backgroundColor="INDIGO_DARKEN_3" height="100px" waves="DEFAULT" padding="0"/>
                <m:MaterialColumn grid="l2 s12 m6" backgroundColor="YELLOW_DARKEN_4" height="200px" waves="DEFAULT" padding="0"/>
                <m:MaterialColumn grid="l1 s12 m6" backgroundColor="GREEN_ACCENT_1" height="200px" waves="DEFAULT" padding="0"/>
            </ma:masonry.MaterialMasonry>
        </widget:CodeSection>

        <widget:CodeSection sectionTitle="Card Support" description="You can wrap the columns and add card inside of it">
            <ma:masonry.MaterialMasonry backgroundColor="BLACK">
                <m:MaterialColumn grid="l6 s12 m6" padding="4">
                    <m:MaterialCard marginBottom="0" marginTop="0" backgroundColor="GREY_DARKEN_1">
                        <m:MaterialCardImage waves="DEFAULT">
                            <ma:webp.MaterialWebpImage url="https://gwtmaterialdesign.github.io/gwt-material-demo/images/kodalin.webp" fallbackExtension="jpg" />
                        </m:MaterialCardImage>

                        <m:MaterialCardContent textColor="BLACK">
                            <m:MaterialRow marginBottom="0">
                                <m:MaterialLabel fontSize="1.2em" text="In a Perfect World" textColor="WHITE" grid="l9 s9 m9" truncate="true"/>
                                <m:MaterialIcon iconType="STAR_BORDER" textAlign="RIGHT" iconColor="WHITE" grid="l3 s3 m3" />
                            </m:MaterialRow>
                            <m:MaterialLabel text="Kodaline" textColor="WHITE"/>
                            <m:MaterialLabel text="Recently Added" fontSize="0.8em" textColor="WHITE"/>
                        </m:MaterialCardContent>
                    </m:MaterialCard>
                </m:MaterialColumn>
                <m:MaterialColumn grid="l2 s12 m6" padding="4">
                    <m:MaterialCard marginBottom="0" marginTop="0" backgroundColor="TEAL_DARKEN_1">
                        <m:MaterialCardImage waves="DEFAULT">
                            <ma:webp.MaterialWebpImage url="https://gwtmaterialdesign.github.io/gwt-material-demo/images/foster.webp" fallbackExtension="jpg"/>
                        </m:MaterialCardImage>

                        <m:MaterialCardContent textColor="BLACK">
                            <m:MaterialRow marginBottom="0">
                                <m:MaterialLabel fontSize="1.2em" text="Supermodel" textColor="WHITE" grid="l9 s9 m9" truncate="true"/>
                                <m:MaterialIcon iconType="STAR_BORDER" textAlign="RIGHT" iconColor="WHITE" grid="l3 s3 m3" />
                            </m:MaterialRow>
                            <m:MaterialLabel text="Foster the people" textColor="WHITE"/>
                        </m:MaterialCardContent>
                    </m:MaterialCard>
                </m:MaterialColumn>
                <m:MaterialColumn grid="l2 s12 m6" padding="4">
                    <m:MaterialCard marginBottom="0" marginTop="0" backgroundColor="PURPLE_DARKEN_1">
                        <m:MaterialCardImage waves="DEFAULT">
                            <ma:webp.MaterialWebpImage url="https://gwtmaterialdesign.github.io/gwt-material-demo/images/ellie.webp" fallbackExtension="png"/>
                        </m:MaterialCardImage>

                        <m:MaterialCardContent textColor="BLACK">
                            <m:MaterialRow marginBottom="0">
                                <m:MaterialLabel fontSize="1.2em" text="Halcyon Days" textColor="WHITE" grid="l9 s9 m9" truncate="true"/>
                                <m:MaterialIcon iconType="STAR_BORDER" textAlign="RIGHT" iconColor="WHITE" grid="l3 s3 m3" />
                            </m:MaterialRow>
                            <m:MaterialLabel text="Ellie Goulding" textColor="WHITE"/>
                        </m:MaterialCardContent>
                    </m:MaterialCard>
                </m:MaterialColumn>
                <m:MaterialColumn grid="l2 s12 m6" padding="4">
                    <m:MaterialCard marginBottom="0" marginTop="0" backgroundColor="PINK_DARKEN_1">
                        <m:MaterialCardImage waves="DEFAULT">
                            <ma:webp.MaterialWebpImage url="https://gwtmaterialdesign.github.io/gwt-material-demo/images/onerepublic.webp" fallbackExtension="png" />
                        </m:MaterialCardImage>

                        <m:MaterialCardContent textColor="BLACK">
                            <m:MaterialRow marginBottom="0">
                                <m:MaterialLabel fontSize="1.2em" text="Native" textColor="WHITE" grid="l9 s9 m9" truncate="true"/>
                                <m:MaterialIcon iconType="STAR_BORDER" textAlign="RIGHT" iconColor="WHITE" grid="l3 s3 m3" />
                            </m:MaterialRow>
                            <m:MaterialLabel text="One Republic" textColor="WHITE"/>
                        </m:MaterialCardContent>
                    </m:MaterialCard>
                </m:MaterialColumn>

                <m:MaterialColumn grid="l2 s12 m6" padding="4">
                    <m:MaterialCard marginBottom="0" marginTop="0" backgroundColor="RED_DARKEN_1">
                        <m:MaterialCardImage waves="DEFAULT">
                            <ma:webp.MaterialWebpImage url="https://gwtmaterialdesign.github.io/gwt-material-demo/images/rca.webp" fallbackExtension="jpg" />
                        </m:MaterialCardImage>

                        <m:MaterialCardContent textColor="BLACK">
                            <m:MaterialRow marginBottom="0">
                                <m:MaterialLabel fontSize="1.2em" text="Comedown machine" textColor="WHITE" grid="l9 s9 m9" truncate="true"/>
                                <m:MaterialIcon iconType="STAR_BORDER" textAlign="RIGHT" iconColor="WHITE" grid="l3 s3 m3" />
                            </m:MaterialRow>
                            <m:MaterialLabel text="The Strokes" textColor="WHITE"/>
                        </m:MaterialCardContent>
                    </m:MaterialCard>
                </m:MaterialColumn>
                <m:MaterialColumn grid="l4 s12 m6" padding="4">
                    <m:MaterialCard marginBottom="0" marginTop="0" backgroundColor="AMBER_DARKEN_1">
                        <m:MaterialCardImage waves="DEFAULT">
                            <ma:webp.MaterialWebpImage url="https://gwtmaterialdesign.github.io/gwt-material-demo/images/william-parrel.webp" fallbackExtension="jpg" />
                        </m:MaterialCardImage>

                        <m:MaterialCardContent textColor="BLACK">
                            <m:MaterialRow marginBottom="0">
                                <m:MaterialLabel fontSize="1.2em" text="Girl" textColor="WHITE" grid="l9 s9 m9" truncate="true"/>
                                <m:MaterialIcon iconType="STAR_BORDER" textAlign="RIGHT" iconColor="WHITE" grid="l3 s3 m3" />
                            </m:MaterialRow>
                            <m:MaterialLabel text="Pharrell Williams" textColor="WHITE"/>
                        </m:MaterialCardContent>
                    </m:MaterialCard>
                </m:MaterialColumn>
            </ma:masonry.MaterialMasonry>
        </widget:CodeSection>
    </m:MaterialPanel>
</ui:UiBinder>
