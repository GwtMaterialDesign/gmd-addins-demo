<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:m="urn:import:gwt.material.design.client.ui"
             xmlns:widget="urn:import:gmd.addins.demo.client.widget"
             xmlns:ma="urn:import:gwt.material.design.addins.client">

    <m:MaterialPanel>
        <widget:CodeSection sectionTitle="PathAnimator Options" description="We provided useful options to control your Path Animator duration.">
            <m:MaterialRow>
                <m:MaterialIntegerBox grid="s12 m4 l4" ui:field="txtDuration" label="Duration"/>
                <m:MaterialIntegerBox grid="s12 m4 l4" ui:field="txtTargetShowDuration" label="Target Show Duration"/>
                <m:MaterialIntegerBox grid="s12 m4 l4" ui:field="txtExtraTransitionDuration" label="Extra Transition Duration"/>
            </m:MaterialRow>

            <m:MaterialRow padding="20">
                <m:MaterialCheckBox ui:field="withBackground" text="With Background" />
                <m:MaterialCheckBox ui:field="withBorder" text="With Border" />
                <m:MaterialCheckBox ui:field="withShadow" text="With Shadow" />
            </m:MaterialRow>

            <m:MaterialButton ui:field="btnOptionSource" text="Click me to animate" backgroundColor="BLUE" size="LARGE" />

            <m:MaterialRow>
                <m:MaterialCard ui:field="panelWithOptions" grid="l4" opacity="0">
                    <m:MaterialCardContent>
                        <m:MaterialCardTitle text="Sample" iconType="POLYMER" iconPosition="RIGHT"/>
                        <m:MaterialLabel text="I am a very simple card. I am good at containing small bits of information. I am convenient because I require little markup to use effectively." />
                    </m:MaterialCardContent>
                    <m:MaterialCardAction>
                        <m:MaterialLink ui:field="btnCloseWithOptions" text="Turn it back" iconType="POLYMER"/>
                    </m:MaterialCardAction>
                </m:MaterialCard>
            </m:MaterialRow>
        </widget:CodeSection>
    </m:MaterialPanel>
</ui:UiBinder>
