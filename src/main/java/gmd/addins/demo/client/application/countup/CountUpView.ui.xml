<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:m="urn:import:gwt.material.design.client.ui"
             xmlns:widget="urn:import:gmd.addins.demo.client.widget"
             xmlns:ma="urn:import:gwt.material.design.addins.client">

    <m:MaterialPanel>
        <g:HTMLPanel>
            <pre class="xml" style="height: 40px;overflow: hidden">
&lt;ma:countup.MaterialCountUp />
            </pre>
        </g:HTMLPanel>
        <widget:CodeSection sectionTitle="Configurations" description="Below are the available configs for your count up widget.">
            <ma:countup.MaterialCountUp value="0.00" ui:field="countUp" startValue="50.01" endValue="99.99" decimals="2" fontSize="5em" fontWeight="LIGHTER"/>
            <m:MaterialRow>
                <m:MaterialDoubleBox ui:field="txtStart" label="Start Value" value="50.01" grid="s3" fieldType="OUTLINED"/>
                <m:MaterialDoubleBox ui:field="txtEnd" label="End Value" value="99.99" grid="s3" fieldType="OUTLINED"/>
                <m:MaterialIntegerBox ui:field="txtDecimals" label="Decimals" value="2" grid="s3" fieldType="OUTLINED"/>
                <m:MaterialDoubleBox ui:field="txtDuration" label="Duration" value="2.5" grid="s3"  fieldType="OUTLINED"/>
            </m:MaterialRow>
            <m:MaterialRow>
                <m:MaterialTextBox ui:field="txtSeparator" label="Separator" value="," grid="s3" fieldType="OUTLINED"/>
                <m:MaterialTextBox ui:field="txtDecimal" label="Decimal" value="." grid="s3" fieldType="OUTLINED"/>
                <m:MaterialTextBox ui:field="txtPrefix" label="Prefix" value="$" grid="s3" fieldType="OUTLINED"/>
                <m:MaterialTextBox ui:field="txtSuffix" label="Suffix" value=" " grid="s3" fieldType="OUTLINED"/>
            </m:MaterialRow>
            <m:MaterialRow>
                <m:MaterialCheckBox ui:field="cbCallback" type="FILLED" text="Toast on complete" />
            </m:MaterialRow>
            <m:MaterialRow>
                <m:MaterialButton ui:field="btnStart" text="Start Counting" marginRight="20" />
                <m:MaterialButton ui:field="btnPauseResume" text="Pause / Resume" marginRight="20" />
                <m:MaterialButton ui:field="btnReset" text="Reset" marginRight="20" />
            </m:MaterialRow>
        </widget:CodeSection>
    </m:MaterialPanel>
</ui:UiBinder>
