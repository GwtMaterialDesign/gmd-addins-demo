<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:m="urn:import:gwt.material.design.client.ui"
             xmlns:widget="urn:import:gmd.addins.demo.client.widget"
             xmlns:ma="urn:import:gwt.material.design.addins.client">

    <m:MaterialPanel>
        <widget:CodeSection sectionTitle="Material Cut Out" description="Click the icon below to show a material cutout.">
            <m:MaterialRow paddingLeft="20">
                <m:MaterialIcon iconType="POLYMER" ui:field="btnCutOut"/>

                <!-- Material CutOut -->
                <ma:cutout.MaterialCutOut ui:field="cutout" circle="true" opacity="0.8" textAlign="CENTER" paddingTop="120">
                    <m:MaterialTitle title="New Feature" description="Description of your new Feature" textColor="WHITE"/>
                    <m:MaterialButton text="Close" ui:field="btnCutOutClose" textColor="BLUE" backgroundColor="WHITE"/>
                </ma:cutout.MaterialCutOut>
            </m:MaterialRow>
        </widget:CodeSection>
    </m:MaterialPanel>
</ui:UiBinder>
