<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:m="urn:import:gwt.material.design.client.ui"
             xmlns:widget="urn:import:gmd.addins.demo.client.widget"
             xmlns:ma="urn:import:gwt.material.design.addins.client">

    <m:MaterialPanel>
        <widget:CodeSection sectionTitle="Usage" description="You can easily set the value and design the fille color of the circular progress">
            <m:MaterialRow>
                <m:MaterialColumn grid="s12 m4">
                    <m:MaterialCheckBox ui:field="fillColors" text="Fill Colors" />
                    <m:MaterialCheckBox ui:field="thickness" text="Thickness" />
                    <m:MaterialCheckBox ui:field="reverse" text="Reverse" />
                    <m:MaterialCheckBox ui:field="updateValue" text="Update Value" />
                    <m:MaterialCheckBox ui:field="toastEvent" text="Toast Events" />
                </m:MaterialColumn>
                <ma:circularprogress.MaterialCircularProgress ui:field="progress" value="0.3" grid="s12 m4"/>
            </m:MaterialRow>
        </widget:CodeSection>
    </m:MaterialPanel>
</ui:UiBinder>
