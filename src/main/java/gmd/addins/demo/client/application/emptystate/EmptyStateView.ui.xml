<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:m="urn:import:gwt.material.design.client.ui"
             xmlns:widget="urn:import:gmd.addins.demo.client.widget"
             xmlns:ma="urn:import:gwt.material.design.addins.client">

    <m:MaterialPanel>
        <g:HTMLPanel>
            <pre class="xml" style="height: 40px;overflow: hidden">
    &lt;ma:emptystate.MaterialEmptyState />
            </pre>
        </g:HTMLPanel>
        <widget:CodeSection sectionTitle="Introduction" description="A list that doesn’t contain any items, or a search that doesn’t display any results, are examples of empty states. Although these states aren’t typical, they should be designed to prevent user confusion.">
            <ma:emptystate.MaterialEmptyState height="60vh" iconType="POLYMER" title="No Inbox" description="You dont have new message"/>
        </widget:CodeSection>

        <widget:CodeSection sectionTitle="Icons, Title and Description" description="You can easily update each icon, title and description of the emptystate.">
            <ma:emptystate.MaterialEmptyState height="60vh" iconType="MOVIE" iconColor="RED_DARKEN_2" title="Get Started" description="Find a great movie in the Play Store, then relax and enjoy with the Play Movies and TV app." textColor="WHITE" backgroundColor="RED_DARKEN_2"/>
        </widget:CodeSection>

        <widget:CodeSection sectionTitle="Loading Empty State" description="You can turn also your empty state to loading state.">
            <ma:emptystate.MaterialEmptyState ui:field="loadingStatePanel" height="60vh" iconType="LOCAL_AIRPORT" iconColor="PURPLE" title="Loading your trips" description="Please wait while loading your trips" textColor="GREY" backgroundColor="GREY_LIGHTEN_3"/>
        </widget:CodeSection>
    </m:MaterialPanel>
</ui:UiBinder>
