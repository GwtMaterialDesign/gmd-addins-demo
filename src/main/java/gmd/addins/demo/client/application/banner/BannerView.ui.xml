<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:m="urn:import:gwt.material.design.client.ui"
             xmlns:ma="urn:import:gwt.material.design.addins.client">

    <m:MaterialPanel>
        <g:HTMLPanel>
            <pre class="xml" style="height: 40px;overflow: hidden">
&lt;ma:avatar.MaterialBanner />
            </pre>
        </g:HTMLPanel>
        <m:MaterialRow addStyleNames="banner-container" padding="0" overflow="AUTO">
            <ma:banner.MaterialBanner ui:field="banner" message="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam">
                <ma:banner.MaterialBannerActions ui:field="actions">
                    <m:MaterialButton ui:field="action1" text="ACTION" />
                </ma:banner.MaterialBannerActions>
            </ma:banner.MaterialBanner>

            <m:MaterialPanel>
                <m:MaterialColumn grid="m4" offset="m4" ui:field="target" height="400px">
                    <m:MaterialCheckBox ui:field="withIcon" text="With Icon" />
                    <m:MaterialCheckBox ui:field="singleLine" text="Single Line" />
                    <m:MaterialCheckBox ui:field="multiActions" text="Multi Actions" />
                    <m:MaterialCheckBox ui:field="toastEvents" text="Toast Events" />
                    <m:MaterialButton ui:field="open" text="Open Banner" waves="DEFAULT"/>
                </m:MaterialColumn>
            </m:MaterialPanel>
        </m:MaterialRow>

        <m:MaterialRow>
            <g:HTMLPanel>
                <pre class="xml">
                    &lt;ma:banner.MaterialBanner ui:field="banner" message="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam">
                    &lt;ma:banner.MaterialBannerActions ui:field="actions">
                    &lt;m:MaterialButton ui:field="action1" text="ACTION" />
                    &lt;/ma:banner.MaterialBannerActions>
                    &lt;/ma:banner.MaterialBanner>
                </pre>
            </g:HTMLPanel>
        </m:MaterialRow>
    </m:MaterialPanel>
</ui:UiBinder>
