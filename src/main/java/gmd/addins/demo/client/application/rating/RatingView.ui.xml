<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:m="urn:import:gwt.material.design.client.ui"
             xmlns:widget="urn:import:gmd.addins.demo.client.widget"
             xmlns:ma="urn:import:gwt.material.design.addins.client">

    <m:MaterialPanel>
        <g:HTMLPanel>
            <pre class="xml" style="height: 40px;overflow: hidden">
&lt;ma:rating.MaterialRating />
            </pre>
        </g:HTMLPanel>
        <widget:CodeSection sectionTitle="Usage" description="By default, it uses the IconType#STAR to represent the selected rating, but other icons can be set using the #setSelectedRatingIcon(IconType) method.">
            <m:MaterialRow>
                <m:MaterialColumn grid="l6 m6 s12">
                    <ma:rating.MaterialRating ui:field="rating" marginBottom="20"/>
                    <m:MaterialCheckBox ui:field="icon" text="Favorite Icon" />
                    <m:MaterialCheckBox ui:field="maxRating" text="MaxRating (10)" />
                    <m:MaterialCheckBox ui:field="editable" text="Editable" value="true" marginBottom="20"/>
                    <m:MaterialButton ui:field="setValue" text="Set Value" marginRight="12" waves="LIGHT"/>
                    <m:MaterialButton ui:field="setValueWithEvent" text="Set Value With Event" type="OUTLINED" waves="LIGHT"/>
                </m:MaterialColumn>
            </m:MaterialRow>
        </widget:CodeSection>
    </m:MaterialPanel>
</ui:UiBinder>
