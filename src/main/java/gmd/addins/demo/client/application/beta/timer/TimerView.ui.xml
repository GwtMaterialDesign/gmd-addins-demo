<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
			 xmlns:g="urn:import:com.google.gwt.user.client.ui"
			 xmlns:m="urn:import:gwt.material.design.client.ui"
			 xmlns:widget="urn:import:gmd.addins.demo.client.widget"
			 xmlns:in="urn:import:gwt.material.design.incubator.client">

    <m:MaterialPanel>
        <g:HTMLPanel>
            <pre class="xml" style="height: 40px;overflow: hidden">
    &lt;in:progress.ProgressLineBar ui:field="progressLineBar" />
            </pre>
        </g:HTMLPanel>
        <widget:CodeSection sectionTitle="Usage" description="This is another version of MaterialProgressBar Indeterminate type. This widget is good for timer usage.">
			<in:timer.TimerProgress />
        </widget:CodeSection>
		<widget:CodeSection sectionTitle="Duration">
			<in:timer.TimerProgress duration="5000"/>
			<g:HTMLPanel>
				<pre class="xml">
&lt;in:timer.TimerProgress duration="5000"/>
				</pre>
			</g:HTMLPanel>
		</widget:CodeSection>
		<widget:CodeSection sectionTitle="Background and Fill Color">
			<in:timer.TimerProgress backgroundColor="PINK_LIGHTEN_5" fillColor="PINK" />
			<g:HTMLPanel>
				<pre class="xml">
&lt;in:timer.TimerProgress backgroundColor="PINK_LIGHTEN_5" fillColor="PINK" />
				</pre>
			</g:HTMLPanel>
		</widget:CodeSection>
    </m:MaterialPanel>
</ui:UiBinder>
